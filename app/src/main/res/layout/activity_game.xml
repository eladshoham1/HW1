<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activites.GameActivity"
    android:background="@drawable/game_background" >

    <EditText
        android:id="@+id/game_EDT_playerA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Player A"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/game_IMG_playerA"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/game_EDT_playerA"
        android:src="@drawable/player_messi" />

    <TextView
        android:id="@+id/game_LBL_scorePlayerA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/game_IMG_playerA"
        android:layout_marginStart="45dp"
        android:textColor="@color/white"
        android:text="0"
        android:textSize="60sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/game_IMG_cardA"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/upside_down_card" />

        <ImageView
            android:id="@+id/game_IMG_cardB"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_alignRight="@+id/game_IMG_cardA"
            android:src="@drawable/upside_down_card" />

    </LinearLayout>

    <EditText
        android:id="@+id/game_EDT_playerB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_alignParentEnd="true"
        android:text="Player B"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/game_IMG_playerB"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="15dp"
        android:layout_below="@+id/game_EDT_playerB"
        android:layout_alignParentEnd="true"
        android:src="@drawable/player_ronaldo" />

    <TextView
        android:id="@+id/game_LBL_scorePlayerB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/game_IMG_playerB"
        android:layout_marginEnd="45dp"
        android:layout_alignParentEnd="true"
        android:textColor="@color/white"
        android:text="0"
        android:textSize="60sp" />

    <ImageView
        android:id="@+id/game_BTN_play"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:src="@drawable/play_image_button" />

</RelativeLayout>