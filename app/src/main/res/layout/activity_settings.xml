<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Activity_Settings"
    android:background="@color/settings" >

    <TextView
        android:id="@+id/settings_LBL_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:textSize="45sp"
        android:text="Settings" />

    <TextView
        android:id="@+id/settings_LBL_playerAName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_LBL_title"
        android:layout_margin="15dp"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:text="Player A Name" />

    <EditText
        android:id="@+id/settings_EDT_playerAName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_LBL_title"
        android:layout_toEndOf="@+id/settings_LBL_playerAName"
        android:layout_margin="15dp"
        android:maxLength="8"
        android:textColor="@color/white"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/settings_LBL_playerBName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_LBL_playerAName"
        android:layout_margin="15dp"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:text="Player B Name" />

    <EditText
        android:id="@+id/settings_EDT_playerBName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_LBL_playerAName"
        android:layout_toEndOf="@+id/settings_LBL_playerBName"
        android:layout_margin="15dp"
        android:maxLength="8"
        android:textColor="@color/white"
        android:textSize="32sp" />

    <Switch
        android:id="@+id/settings_SWT_sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_LBL_playerBName"
        android:layout_margin="15dp"
        tools:ignore="UseSwitchCompatOrMaterialXml"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:text="Sound" />

    <Button
        android:id="@+id/settings_BTN_apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:text="Apply" />

</RelativeLayout>
