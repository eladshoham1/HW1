<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Activity_Result"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="20"
    android:background="@drawable/background_result" >

    <TextView
        android:id="@+id/result_LBL_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Game Over"
        android:textColor="@color/black"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/result_LBL_winnerStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="winner"
        android:textColor="@color/black"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/result_LBL_newRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/purple_700"
        android:textSize="35sp" />

    <Button
        android:id="@+id/result_BTN_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Menu" />

    <Button
        android:id="@+id/result_BTN_topTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Top Ten" />

</LinearLayout>